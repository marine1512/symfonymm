{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
{{ parent() }}
   <link rel="stylesheet" href="{{ asset('css/home.css') }}?v=1.0">
{% endblock %}

{% block body %}
   <h1>Nos bestSellers</h1>
<section class="products-section">
    {% for product in promotedProducts %}
    <div class="product-card">
        {% if product.image %}
        <img src="{{ asset(product.image) }}" alt="Image de {{ product.name }}" class="product-image"/>
        {% endif %}
        <div class="product-details">
            <div class="name">
                <h2>{{ product.name }}</h2>
                <p class="product-price">{{ product.price }} â‚¬</p>
            </div>      
            <a href="{{ path('product_detail', { id: product.id }) }}"><button class='detail'>Voir</button></a>
        </div>            
   
    </div>
    {% endfor %}
</section>
{% endblock %}

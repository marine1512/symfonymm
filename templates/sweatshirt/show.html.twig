{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin/admin.css') }}?v=1.0">
{% endblock %}

{% block title %}Sweatshirt{% endblock %}

{% block body %}
    <h1>Sweatshirt</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sweatshirt.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sweatshirt.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ sweatshirt.price }}</td>
            </tr>
            <tr>
                <th>IsPromoted</th>
                <td>{{ sweatshirt.isPromoted ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>StockBySize</th>
                <td>{{ sweatshirt.stockBySize ? sweatshirt.stockBySize|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ sweatshirt.image }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn2" href="{{ path('admin_sweatshirt_index') }}">Retour</a>

    <a class="btn2" href="{{ path('admin_sweatshirt_edit', {'id': sweatshirt.id}) }}">Modifier</a>

    {{ include('sweatshirt/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
   <link rel="stylesheet" href="{{ asset('css/shop/shop-detail.css') }}?v=1.0">
{% endblock %}

{% block body %}
    <div class="product-card2">
        <img src="{{ asset(product.image) }}" alt="{{ product.name }}">
        <div class="product-details">
            <div class="detail">
                <p>Nom :{{ product.name }}</p>
                <p>Prix :{{ product.price }} â‚¬</p>    
            </div>
            <form method="post" action="{{ path('cart_add', { id: product.id }) }}">
                <legend>Taille:</legend>
                <select name="size" id="size" multiple size="5" required>
                    {% for size, quantity in product.stockBySize %}
                        {% if quantity > 0 %}
                            <option value="{{ size }}">{{ size }}</option>
                        {% endif %}
                    {% endfor %}
                </select>

                <button type="submit">Ajouter au panier</button>
            </form>
        </div>            
    </div>
{% endblock %}